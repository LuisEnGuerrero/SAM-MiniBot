{
  "compilerOptions": {
    /* Plataforma */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* MÃ³dulos */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Estructura del proyecto */
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,

    /* Interoperabilidad */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Calidad de cÃ³digo */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,

    /* ðŸ”‘ CLAVE PARA TU ERROR ACTUAL */
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
